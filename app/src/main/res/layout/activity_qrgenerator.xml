<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminaccess.QRGenerator">

    <EditText
        android:id="@+id/admin_createqr_edit"
        android:layout_width="331dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/edit_text_border"
        android:paddingLeft="10dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="694dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/enter_qr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/qr_view"
        android:layout_width="308dp"
        android:layout_height="305dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="212dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_createqr_edit"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/generate_qr"
        android:layout_width="281dp"
        android:layout_height="78dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/btn_radius"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Generate QR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258" />

    <Button
        android:id="@+id/upload_qr"
        android:layout_width="281dp"
        android:layout_height="78dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="68dp"
        android:text="Set as Admin QR"
        android:background="@drawable/btn_radius"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qr_view"
        app:layout_constraintVertical_bias="0.684" />
</androidx.constraintlayout.widget.ConstraintLayout>