<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminaccess.AdminShowQR">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/attendance_records"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_blur_grad"
        android:alpha="0.4"
        />
    <ImageView
        android:id="@+id/show_qr"
        android:layout_width="361dp"
        android:layout_height="371dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="261dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/max_fitness_icn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="349dp"
        android:layout_height="88dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="62dp"
        android:gravity="center"
        android:text="Your QR"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/show_qr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>